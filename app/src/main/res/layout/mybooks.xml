<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#E2A9A9"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0F8ED8F"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_bimage"
            android:layout_width="424dp"
            android:layout_height="202dp"
            android:layout_weight="1"
            android:background="#090505"
            app:srcCompat="@drawable/ic_book" />

        <LinearLayout
            android:layout_width="475dp"
            android:layout_height="202dp"
            android:layout_weight="1"
            android:background="@color/appMainColor"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_bname"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="Book name"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/my_author"
                style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Author"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_bedition"
                style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Edition"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_bprice"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Price"
                android:textColor="#F3EE1717"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>