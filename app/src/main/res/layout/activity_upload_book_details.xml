    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginBottom="420dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="399dp"
            android:layout_height="204dp"
            android:onClick="imageUploadProcess"
            android:layout_weight="1"
            app:srcCompat="@drawable/bookcover" />
    </LinearLayout>

    <EditText
        android:id="@+id/bookName"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Book Name"
        android:inputType="textPersonName"
        android:textColor="#B90A0909"
        android:textColorHint="#565756"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/progressBar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.327" />

    <EditText
        android:id="@+id/bookAuthor"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Author"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bookName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bookName"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        app:layout_constraintVertical_bias="0.031" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:layout_marginBottom="41dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Price"
        app:layout_constraintEnd_toEndOf="@+id/bookAuthor"
        app:layout_constraintStart_toStartOf="@+id/bookAuthor"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bookEdition"
        android:layout_width="268dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Edition"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bookAuthor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bookAuthor"
        app:layout_constraintTop_toBottomOf="@+id/bookAuthor"
        app:layout_constraintVertical_bias="0.05" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookEdition"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/Price"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="number"
            android:textSize="24sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/selectCategory"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="30dp"
            android:background="#D0E601"
            android:onClick="selectCategory"
            android:text="Category"
            android:textSize="16sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="84dp"
            android:layout_height="38dp"
            android:background="@color/textcolor"
            android:onClick="uploadBoodDetails"
            android:text="Submit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>